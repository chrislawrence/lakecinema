<div class="movie_title">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'movie_title_input' %>
</div>

<div class="movie_rating">
  <%= f.label :rating %>
  <%= f.text_field :rating, class: 'rating' %>
</div>

<%= f.label :overview %>
<%= f.text_field :overview, class: 'overview' %>

<%= f.label :poster_url %>
<%= f.text_field :poster_url, class: 'poster_url' %>

<%= f.fields_for :showings do |s| %>
  <%= s.hidden_field :day, value: s.object.day %>
  <%= s.hidden_field :view_index, value: s.object.view_index %>
  <%= s.label :times, s.object.day %>
  <%= s.text_field :times %>
<% end %>


