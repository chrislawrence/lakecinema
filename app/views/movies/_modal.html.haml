.backdrop{style:"background-image: url('#{@movie.backdrop.url(:normal)}')"}
  .overlay
    %h3{class: 'title'} #{@movie.title} (#{@movie.rating})
  .movie-details.clearfix
    .overview
      %h4 Overview
      = @movie.overview

    .credits
      - if @movie.director.present?
        %h4 Director
        %p #{@movie.director}
      - if @movie.cast.present?
        %h4 Cast
        - @movie.cast.each do |actor| 
          %li{class: 'cast'} #{actor}
  
