.movie
  %a{rel: 'leanModal', href: "#modal-#{movie.id}", class: 'movie-link'}
    .poster
      = image_tag movie.poster.url(:normal), 
        srcset: "#{movie.poster.url(:retina)} 2x"
      .more
        #{fa_icon 'info-circle'}

    %h3 #{movie.title} (#{movie.rating})

  - movie.showings.each do |s|
    %p
      %b #{s.day}:
      #{s.times}

  - if movie.extra
    %p #{sanitize(markdown(movie.extra))}


  .modal{id: "modal-#{movie.id}"}
    .modal-close #{fa_icon('times')}
    .backdrop{style:"background-image: url('#{movie.backdrop.url(:normal)}')"}
      .overlay
        %h3{class: 'title'} #{movie.title} (#{movie.rating})
    .movie-details.clearfix
      .overview
        %h4 Overview
        = movie.overview

      .credits
        - if movie.director.present?
          %h4 Director
          %p #{movie.director}
        - if movie.cast.present?
          %h4 Cast
          - movie.cast.each do |actor| 
            %li{class: 'cast'} #{actor}
      
