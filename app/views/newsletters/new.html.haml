= nested_form_for @newsletter do |f|
  .form-group.clearfix
    .form-field.top
      = f.label :send_time
      = f.text_field :send_time
    .form-field.body-field
      = f.label :body
      = f.text_area :body

  %h3 Attach Movies to Newsletter

  #movie_fields
    = f.fields_for :movies do |movie_fields|
      = render 'weeks/movie_fields', f: movie_fields

  = f.button class: 'btn btn-submit' do
    #{fa_icon 'check'} Save

  = f.link_to_add :movies, class: 'btn btn-secondary', data: {:target => "#movie_fields"} do
    #{fa_icon 'th-list'} Add Movie


